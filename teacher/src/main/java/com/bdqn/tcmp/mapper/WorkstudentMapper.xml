<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bdqn.tcmp.mapper.WorkstudentMapper">
	<cache></cache>
	<resultMap type="Workstudent" id="workstudentList">
		<id column="detailid" property="detailid" />
		<result column="workid" property="workid" /><!---->
		<result column="studentid" property="studentid" /><!---->
	</resultMap>
	<!--向插入数据-->
	<insert id="insertWorkstudent" parameterType="Workstudent">
		insert into workstudent
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="workid !=null and workid>0">
				workid,
			</if>
			<if test="studentid !=null and studentid>0">
				studentid,
			</if>
		</trim>
		<trim prefix="values(" suffix=")" suffixOverrides=",">
			<if test="workid !=null and workid>0">
				#{workid},
			</if>
			<if test="studentid !=null and studentid>0">
				#{studentid},
			</if>
		</trim>
	</insert>
	<!--向插入数据-->
	<insert id="insertWorkstudentAndHomeWork" parameterType="Homework_WorkHistory">
		insert into workstudent
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="workid !=null and workid>0">
				workid,
			</if>
			<if test="studentid !=null and studentid>0">
				studentid,
			</if>
		</trim>
		<trim prefix="values(" suffix=")" suffixOverrides=",">
			<if test="workid !=null and workid>0">
				#{workid},
			</if>
			<if test="studentid !=null and studentid>0">
				#{studentid},
			</if>
		</trim>
	</insert>

	<!--根据主键查询一个数据-->
	<select id="selectWorkstudentByID" parameterType="int"  resultMap="workstudentList">
		select detailid ,workid ,studentid
		from workstudent where detailid=#{id}
	</select>

	<!--修改数据-->
	<update id="updateWorkstudent" parameterType="Workstudent">
		update workstudent
		<trim prefix="set" suffix="where detailid=#{detailid}" suffixOverrides=",">
		<if test="workid !=null and workid>0">
			workid=#{workid},
		</if>
		<if test="studentid !=null and studentid>0">
			studentid=#{studentid},
		</if>
		</trim>
	</update>

	<!--修改的启用状态-->
	<update id="updateWorkstudentEnabledByID">
		update  set isEnabled =#{value} where detailid=#{id}
	</update>

	<!--删除指定主键的数据-->
	<delete id="deleteWorkstudent" parameterType="int">
		delete from workstudent where detailid=#{id}
	</delete>

	<!--查询全部数据-->
	<select id="selectWorkstudentAll"  resultMap="workstudentList">
		select detailid ,workid ,studentid
		from workstudent
	</select>

	<!--根据条件查询数据-->
	<select id="selectWorkstudentByWhere"  parameterType="WorkstudentDTO"  resultMap="workstudentList">
		select detailid ,workid ,studentid
		from workstudent
		<trim prefix="where" prefixOverrides="and">
			<if test="workid !=null and workid>0">
				and workid=#{workid}
			</if>
			<if test="studentid !=null and studentid>0">
				and studentid=#{studentid}
			</if>
		</trim>
	</select>

	<!--根据条件查询满足条件的记录数-->
	<select id="selectWorkstudentCountByWhere"  parameterType="WorkstudentDTO" resultType="int">
		select count(detailid)
		from workstudent
		<trim prefix="where" prefixOverrides="and">
			<if test="workid !=null and workid>0">
				and workid=#{workid}
			</if>
			<if test="studentid !=null and studentid>0">
				and studentid=#{studentid}
			</if>
		</trim>
	</select>

	<!--得到数据表满足查询条件的分页记录-->
	<select id="selectWorkstudentByPage"  parameterType="WorkstudentDTO" resultMap="workstudentList">
		select detailid ,workid ,studentid
		from workstudent
		<trim prefix="where" prefixOverrides="and">
			<if test="workid !=null and workid>0">
				and workid=#{workid}
			</if>
			<if test="studentid !=null and studentid>0">
				and studentid=#{studentid}
			</if>
		</trim>
		LIMIT #{fromTo},#{pageSize}
	</select>
</mapper>

